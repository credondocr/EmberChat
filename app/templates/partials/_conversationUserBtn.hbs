{{#link-to 'conversation.user' id class="list-group-item"}}
    {{name}}
    {{#if user}}
        {{#if user.online}}
            <span class="label label-success pull-right">{{newMessages}}</span>
        {{else}}
            <span class="label label-default pull-right">{{newMessages}}</span>
        {{/if}}
    {{else}}
        {{#if newMessages}}
            <span class="badge pull-right">{{newMessages}}</span>
        {{/if}}
    {{/if}}
{{/link-to}}