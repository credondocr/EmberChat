<button class="btn btn-primary removeBtn">
    Remove room
</button>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Remove room {{room.name}} ?</h4>
            </div>
            <div class="modal-body">
                This will permanently remove the room {{room.name}}.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" {{action 'remove'}}>Remove this room</button>
            </div>
        </div>
    </div>
</div>