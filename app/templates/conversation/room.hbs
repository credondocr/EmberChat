<div class="col-xs-8">
    <div class="panel panel-default">
        {{partial 'partials/_conversationHead'}}
        {{partial 'partials/_conversationBody'}}
        <div class="panel-footer">
            <form {{action "send" on="submit"}} role="form">
                <div class="form-group">
                    <div class="input-group">
                        {{input disabledBinding="conversation.closed" type="text" valueBinding='text' class="form-control"}}
                        <span class="input-group-btn">
                            <button {{action 'send'}} class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-xs-4">
    {{user-list usersBinding="conversation.users"}}
    {{#if EmberChat.Session.isAdmin}}
        {{room-remove roomBinding="conversation.room"}}
    {{/if}}
</div>

